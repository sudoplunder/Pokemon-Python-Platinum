{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event Definition",
  "type": "object",
  "required": ["id", "trigger", "actions"],
  "properties": {
    "id": { "type": "string" },
    "trigger": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string" },
        "value": { "type": ["string", "number", "null"] }
      },
      "additionalProperties": false
    },
    "once": { "type": "boolean", "default": true },
    "prerequisites": {
      "type": "object",
      "properties": {
        "all": { "type": "array", "items": { "type": "string" } },
        "any": { "type": "array", "items": { "type": "string" } },
        "none": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "set_flags": { "type": "array", "items": { "type": "string" } },
    "clear_flags": { "type": "array", "items": { "type": "string" } },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["command"],
        "properties": {
          "command": { 
            "type": "string",
            "enum": ["SHOW_TEXT", "show_dialogue", "give_item", "give_pokemon", "starter_menu", 
                     "start_trainer_battle", "scripted_capture_demo", "set_location", 
                     "start_wild_battle", "SET_FLAG", "CLEAR_FLAG", "START_BATTLE"]
          },
          "dialogue_key": { "type": "string" },
          "keys": { "type": "array", "items": { "type": "string" } },
          "speaker": { "type": "string" },
          "mode": { "type": "string" },
          "battle_id": { "type": "string" },
          "menu": { "type": "string" },
          "flag": { "type": "string" },
          "item": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 1 },
          "species": { "type": "string" },
          "level": { "type": "integer", "minimum": 1, "maximum": 100 },
          "location": { "type": "string" },
          "value": {}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}